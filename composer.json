{
	"name": "klapuch/authorization",
	"description": " HTTP based authorization ",
	"type": "library",
	"homepage": "https://www.github.com/klapuch/Authorization",
	"authors": [
		{
			"name": "Dominik Klapuch",
			"email": "klapuchdominik@gmail.com",
			"homepage": "https://www.github.com/klapuch",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=7.1"
	},
	"require-dev": {
		"nette/tester": "^1.7",
		"mockery/mockery": "^0.9.6",
		"sebastian/phpcpd": "^2.0",
		"phpstan/phpstan": ">=0.5.0",
		"jakub-onderka/php-parallel-lint": "^0.9.2",
		"slevomat/coding-standard": "^1.1",
		"consistence/coding-standard": "^0.12.0"
	},
	"autoload": {
		"psr-4": {
			"Klapuch\\Authorization\\": [
				"Core/"
			]
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Klapuch\\Authorization\\": [
				"Tests/"
			]
		}
	},
	"scripts": {
		"lint": "parallel-lint -e php,phpt Core Tests",
		"phpcpd": "phpcpd Core",
		"phpstan": "phpstan analyze -l 5 -c phpstan.neon Core Tests",
		"phpcs": "phpcs --standard=ruleset.xml --extensions=php,phpt --encoding=utf-8 --tab-width=4 -sp Core",
		"test": "tester -o console -s -p php-cgi -c Tests/php.ini Tests/",
		"bfc": [
			"@composer dump-autoload",
			"@lint",
			"@phpcpd",
			"@phpstan",
			"@phpcs",
			"@test"
		]
	}
}
